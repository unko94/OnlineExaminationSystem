@model Models.Model.Question
 
              <div class="m-4">
                  <div class="text-end pe-4">
                    <p>@Model.Score</p>
                  </div>
             
                <p>@Model.QuestionText</p>
                  
                @for (int i =0;i<Model.Options.Count();i++)
                {
                 var optionvalue = Model.Options[i];
                 var uniqueID = $"question-{Model.Id}-option-{i}";

                <div class="p-2">
                   <input type="radio" id="@uniqueID" name="SelectedOption" value="@optionvalue" />
                    <label for="@uniqueID">@optionvalue</label>
                   </div>
                }
                   
               
              </div>
              
       
      

          
 
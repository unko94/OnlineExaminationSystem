@model Models.ViewModel.ForgetPasswordEmailVM
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (TempData["Error"] !=null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
              
            }
             <div class="card">
                 <div class="card-header">
                   <h5>Please enter your registered email</h5>
                   <p> we will  send verfication code to your registered email</p>
                 </div>
                  <div class="card-body">
                    <form method="post">
                        <div class="row px-4 py-3">
                            <label asp-for="@Model.Email"></label>
                            <div class="input-group">
                                <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Email" />
                           
                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary" asp-action="ForgetPasswordEmail">Next</button>
                    </form>
                  </div>
             </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
     
}
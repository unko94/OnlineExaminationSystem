
@{
    ViewData["Title"] = "Welcome to Examly";
}

<body class="bg-light text-dark">

 
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="fw-bold display-5">Empower Learning with Smart Online Exams</h1>
            <p class="lead mt-3">Teachers create. Students learn. Admins manage. One platform for all.</p>
            <div class="mt-4">
                <a asp-area="RigAndLog" asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-2">Get Started</a>
                <a asp-area="RigAndLog" asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">Sign In</a>
            </div>
        </div>
    </section>

   
    <section id="features" class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Examly?</h2>
            <p class="text-secondary">Everything you need to manage exams in one place</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm text-center p-4 h-100">
                    <div class="mb-3">
                        <i class="bi bi-person-workspace fs-1 text-primary"></i>
                    </div>
                    <h5>For Teachers</h5>
                    <p class="text-muted">Create exams, track student results, and receive real-time notifications when students submit.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm text-center p-4 h-100">
                    <div class="mb-3">
                        <i class="bi bi-mortarboard fs-1 text-success"></i>
                    </div>
                    <h5>For Students</h5>
                    <p class="text-muted">Access exams securely, view results instantly, and track progress over time.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm text-center p-4 h-100">
                    <div class="mb-3">
                        <i class="bi bi-gear fs-1 text-warning"></i>
                    </div>
                    <h5>For Admins</h5>
                    <p class="text-muted">Manage users, categories, and performance analytics from one dashboard.</p>
                </div>
            </div>
        </div>
    </section>

    
    <section id="howitworks" class="bg-white py-5 border-top border-bottom">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2">
                            <i class="bi bi-person-plus fs-2 text-primary"></i>
                        </div>
                        <h6>1. Register</h6>
                        <p class="text-muted small">Sign up as teacher, student, or admin.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2">
                            <i class="bi bi-pencil-square fs-2 text-success"></i>
                        </div>
                        <h6>2. Create Questions</h6>
                        <p class="text-muted small">Teachers design questions and assign categories.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2">
                            <i class="bi bi-calendar2-week fs-2 text-warning"></i>
                        </div>
                        <h6>3. Schedule Exam</h6>
                        <p class="text-muted small">Set duration, difficulty, and category for each exam.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2">
                            <i class="bi bi-graph-up fs-2 text-info"></i>
                        </div>
                        <h6>4. View Results</h6>
                        <p class="text-muted small">Analyze performance and progress instantly.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="facts" class="bg-light py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Platform Facts</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-3">
                    <div class="card p-4 shadow-sm h-100">
                        <h5>Total Exams</h5>
                        <p class="display-6 fw-bold text-primary"></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 shadow-sm h-100">
                        <h5>Total Teachers</h5>
                        <p class="display-6 fw-bold text-success"></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 shadow-sm h-100">
                        <h5>Total Students</h5>
                        <p class="display-6 fw-bold text-warning"></p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

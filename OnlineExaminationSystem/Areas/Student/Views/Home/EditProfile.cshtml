@model Models.ViewModel.EditProfileVM
<div class="container my-4">
    <div class="card mb-4">
        <div class="card-header text-center">
            <h3>Edit Profile</h3>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-light">Personal Information</div>
        <div class="card-body">
            <form method="post" asp-action="EditProfile">
                <div class="mb-3">

             

                    <label asp-for="@Model.FullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control"  asp-for="@Model.FullName" value="@Model.FullName">

                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.UserName" class="form-label">User Name</label>
                    <input type="text" class="form-control" asp-for="@Model.UserName" value="@Model.UserName">

                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label  class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.Email" readonly value="@Model.Email">

                  
                </div>

                <div class="mb-3">
                    <label  asp-for="@Model.Phone" class="form-label">Phone</label>
                     <div class="input-group">
                        <select asp-for="@Model.Extention" style="width:20%" asp-items="@Model.Extentions">
                             <option> Select Country</option>
                         </select>
                        <input type="text" class="form-control" asp-for="@Model.Phone" value="@Model.Phone">

                     </div>
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" asp-for="@Model.Gender" value="Male" checked>
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female"  asp-for="@Model.Gender" value="Female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                </div>
                 
                <div class="d-flex justify-content-end mb-4">
                    <button type="submit" class="btn btn-success me-2">Save Changes</button>
                    <a type="reset" class="btn btn-secondary"  asp-action="Profile" >Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
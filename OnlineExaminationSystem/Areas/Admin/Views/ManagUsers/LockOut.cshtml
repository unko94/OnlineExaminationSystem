@model Models.ViewModel.UsersVM
<div class="container mt-5">
    <div class="row justify-content-center">

        <div class="col-md-6">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }
            <div class="card">
                <div class="card-body d-flex">
                    <div class="me-4" style="min-width: 200px;">
                        <h5>User Details</h5>
                        <p><strong>Full Name:</strong> @Model.fullName</p>
                        <p><strong>User Name:</strong> @Model.userName</p>
                        <p><strong>Failed Access:</strong> @Model.accessFailedCount</p>
                    </div>
                    <form method="post" asp-antiforgery="true">
                        <div class="row px-4  py-3">
                            <label asp-for="@Model.id" class="form-label p-2"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="userid" asp-for="@Model.id" hidden/>
                            </div>
                            <span asp-validation-for="@Model.lockoutEnabled" class="text-danger"></span>
                        </div>

                        <div class="row px-4  py-3">
                            <label asp-for="@Model.lockoutEnabled"  class="form-label p-2"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="lockoutEnabled" asp-for="@Model.lockoutEnabled" placeholder="Lockout user" />
                            </div>
                            <span asp-validation-for="@Model.lockoutEnabled" class="text-danger"></span>
                        </div>

                        <div class="row px-4  py-3">
                            <label asp-for="@Model.LockOutTime" class="form-label p-2"></label>
                            <div class="input-group">
                                <input type="date" class="form-control" name="date" asp-for="@Model.LockOutTime" placeholder="Lockout user" />
                            </div>
                            <span asp-validation-for="@Model.LockOutTime" class="text-danger"></span>
                        </div>
                     <button asp-action="LockOut"></button>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
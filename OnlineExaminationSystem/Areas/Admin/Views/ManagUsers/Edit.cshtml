@model Models.ViewModel.EditUser
@using Utility
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i> Edit User Details</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="@Model.id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="@Model.fullName" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.fullName" class="form-control" />
                        <span asp-validation-for="@Model.fullName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.userName" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.userName" class="form-control" />
                        <span asp-validation-for="@Model.userName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.email" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.email" type="email" class="form-control" />
                        <span asp-validation-for="@Model.email" class="text-danger small"></span>
                    </div>


                

                    <div class="row px-4  py-3">
                        <label asp-for="@Model.phoneNumber" class="form-label p-2"></label>
                        <div class="input-group">
                            <select style="width:20%" asp-for="@Model.extention" asp-items="@Model.extentions">
                                <option value="">select country</option>
                            </select>
                            <input class="form-control" type="text"   asp-for="@Model.phoneNumber" placeholder="Phone Number" />

                        </div>
                        <span asp-validation-for="@Model.phoneNumber" class="text-danger"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="@Model.confirmPhoneNumber" class="form-label fw-semibold"></label>
                        <select asp-for="@Model.confirmPhoneNumber" class="form-select">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="@Model.confirmPhoneNumber" class="text-danger small"></span>
                    </div> 

                    <div class="col-md-6">
                        <label asp-for="@Model.roles" class="form-label fw-semibold"></label>
                        <select asp-for="@Model.roleid" asp-items="@Model.roles" class="form-select">
                            <option value="">-- Select Role --</option>
                            
                        </select>
                        <span asp-validation-for="@Model.roleid" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.emailConfirmed" class="form-label fw-semibold"></label>
                        <select asp-for="@Model.emailConfirmed" class="form-select">
                            <option value="@true">Yes</option>
                            <option value="@false">No</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.accessFailedCount" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.accessFailedCount" type="number" class="form-control" min="0" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.lockoutEnabled" class="form-label fw-semibold"></label>
                        <select asp-for="@Model.lockoutEnabled" class="form-select">
                            <option value="@true">Enabled</option>
                            <option value="@false">Disabled</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.lockoutEnd" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.lockoutEnd" type="datetime-local" class="form-control" placeholder="yyyy-MM-dd HH:mm" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.LockOutTime" class="form-label fw-semibold"></label>
                        <input asp-for="@Model.LockOutTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="@Model.LockOutTime" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="UsersMangment" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>

                    <button type="submit" asp-action="Edit"  class="btn btn-primary px-4">
                        <i class="bi bi-save2 me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
